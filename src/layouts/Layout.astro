---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagefind from "@components/PageFind.astro";
import { SITE } from "@consts";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.TITLE}`} description={description} />
    <script
      <script
      async
      is:inline
      src="https://trk2.nbit.blog/script.js"
      data-website-id="72bce35c-6e17-40ce-9e80-d6224b77445e"></script>
    <script>
      document.addEventListener("astro:after-swap", () => {
        // Run after every additional navigation by Astro
        void window.umami.track((props) => ({ ...props }));
      });
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Pagefind />
  </body>
</html>
